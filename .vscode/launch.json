{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug passflow",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/passflow",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build (Debug)",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Attach to passflow",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/passflow",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
