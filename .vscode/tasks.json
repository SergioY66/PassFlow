{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Release)",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "make all — compile with -O3"
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "make",
            "args": [
                "debug"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "make debug — clean + compile with -g -O0"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "make clean — remove build/"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "make",
            "args": [
                "run"
            ],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "make run — build and launch passflow"
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "make",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "make install — copy to /usr/local/bin (sudo)"
        },
        {
            "label": "Uninstall",
            "type": "shell",
            "command": "make",
            "args": [
                "uninstall"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "make uninstall — remove from /usr/local/bin (sudo)"
        },
        {
            "label": "Show Build Info",
            "type": "shell",
            "command": "make",
            "args": [
                "info"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "make info — print compiler, sources, target"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}